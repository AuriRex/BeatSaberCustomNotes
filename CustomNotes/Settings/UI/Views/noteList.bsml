<horizontal>
  <vertical pad-left='50'>
    <page-button event-click='noteList#PageUp' direction='Up' />
    <list id='noteList' expand-cell='true' select-cell='noteSelect' />
    <page-button event-click='noteList#PageDown' direction='Down' />
  </vertical>
  <vertical child-control-height='false'>
    <button text='Reload all notes' on-click='reloadNotes' />
  </vertical>
</horizontal>